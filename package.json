{
  "name": "@productdevbook/ts-i18n",
  "type": "module",
  "version": "1.3.0",
  "packageManager": "pnpm@8.7.0",
  "description": "Give your JavaScript the ability to speak many languages.",
  "author": "Mehmet @productdevbook",
  "license": "MIT",
  "funding": "https://github.com/sponsors/productdevbook",
  "homepage": "https://github.com/productdevbookcom/ts-i18n",
  "repository": {
    "type": "git",
    "url": "https://github.com/productdevbookcom/ts-i18n.git"
  },
  "bugs": "https://github.com/productdevbookcom/ts-i18n/issues",
  "keywords": [
    "i18n",
    "internationalization",
    "internationalisation",
    "translation",
    "interpolation",
    "translate",
    "polyglot",
    "typescript i18n",
    "backend i18n"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup --dts",
    "dev": "tsup --watch",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm build && bumpp --commit --push --tag && pnpm publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "postinstall": "npx simple-git-hooks"
  },
  "peerDependencies": {
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "consola": "^3.2.3",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "1.0.0-beta.19",
    "@types/has": "^1.0.0",
    "@types/iterate-iterator": "^1.0.0",
    "@vitest/coverage-v8": "^0.34.6",
    "bumpp": "^9.2.0",
    "eslint": "^8.50.0",
    "iterate-iterator": "^1.0.2",
    "lint-staged": "^14.0.1",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.10",
    "vitest": "^0.34.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "pnpm eslint . --fix"
  }
}
